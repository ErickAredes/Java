package provachico;

import javax.swing.JOptionPane;

public class ProvaChico {
    public static void main(String[] args) {
        
        float chico = 1.50f,zé = 1.10f;
        int cont = 0;
        
        while(zé<chico){
            chico +=0.02;
            zé +=0.03;
            cont++;
        }
        JOptionPane.showMessageDialog(null,"Vai levar "+cont+" anos"); 
    }
    
}
