
package metodos1;

import javax.swing.JOptionPane;

public class Metodos1 {

    public static void main(String[] args) {
                int numero,cont=0;
        double quadrado,soma=0;
        
        do{
            numero=Integer.parseInt(JOptionPane.showInputDialog("Informe um n√∫mero maior que 0 e menor que 10"));
            
            
        } while (numero <= 0 || numero >= 10);
        
        do{
            if (numero % 2 != 0) {
            quadrado = Math.pow(numero,2);
            soma+=quadrado;
            cont++;
            
            System.out.println(cont+" o valor "+numero+" elevado ao quadrado = "+quadrado+" soma dos quadrados= "+soma);
            }
            numero++;
        }while(cont <20);
    }
    
}

       
   
